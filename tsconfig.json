{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "lib": [
      "es2019"
    ],
    "paths": {
      "@app/exceptions": [
        "libs/exceptions/src"
      ],
      "@app/exceptions/*": [
        "libs/exceptions/src/*"
      ],
      "@app/constants": [
        "libs/constants/src"
      ],
      "@app/constants/*": [
        "libs/constants/src/*"
      ],
      "@app/entities": [
        "libs/entities/src"
      ],
      "@app/entities/*": [
        "libs/entities/src/*"
      ],
      "@app/mail-sender": [
        "libs/mail-sender/src"
      ],
      "@app/mail-sender/*": [
        "libs/mail-sender/src/*"
      ],
      "@app/pug": [
        "libs/pug/src"
      ],
      "@app/pug/*": [
        "libs/pug/src/*"
      ],
      "@app/helpers": [
        "libs/helpers/src"
      ],
      "@app/helpers/*": [
        "libs/helpers/src/*"
      ],
      "@app/dtos": [
        "libs/dtos/src"
      ],
      "@app/dtos/*": [
        "libs/dtos/src/*"
      ],
      "@app/validators": [
        "libs/validators/src"
      ],
      "@app/validators/*": [
        "libs/validators/src/*"
      ],
      "@app/files": [
        "libs/files/src"
      ],
      "@app/files/*": [
        "libs/files/src/*"
      ],
      "@app/decorators": [
        "libs/decorators/src"
      ],
      "@app/decorators/*": [
        "libs/decorators/src/*"
      ],
      "@app/repositories": [
        "libs/repositories/src"
      ],
      "@app/repositories/*": [
        "libs/repositories/src/*"
      ],
      "@app/interfaces": [
        "libs/interfaces/src"
      ],
      "@app/interfaces/*": [
        "libs/interfaces/src/*"
      ],
      "@app/types": [
        "libs/types/src"
      ],
      "@app/types/*": [
        "libs/types/src/*"
      ],
      "@app/file-storage": [
        "libs/file-storage/src"
      ],
      "@app/file-storage/*": [
        "libs/file-storage/src/*"
      ],
      "@app/guards": [
        "libs/guards/src"
      ],
      "@app/guards/*": [
        "libs/guards/src/*"
      ]
    }
  }
}
